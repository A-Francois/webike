<div class="container_new">
  <div class="banner-page text-center">
    <h1>Update<%= @ride.title %></h1>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
          <%= simple_form_for @ride do |f| %>
            <%= f.input :title %>
            <%= f.input :city_departure %>
            <%= f.input :city_arrival %>
            <%= f.input :departure_date, as: :string, required: false, input_html: {class: "datepicker"} %>
            <%= f.input :arrival_date, as: :string, required: false, input_html: {class: "datepicker"}   %>
            <%= f.input :ride_description %>
            <%= f.input :photo, as: :file %>
            <%= f.button :submit, class: 'btn btn-black' %>
          <% end %>
          <%= link_to 'Show', @ride, class: "btn btn-black" %> |
          <%= link_to 'Back', rides_path, class: "btn btn-black" %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="container" id="image-new-ride"></div>
      </div>
    </div>
  </div>
</div>
