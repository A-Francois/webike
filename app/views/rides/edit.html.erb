
<div class="container_new">
  <div class="banner-page text-center">
    <h1>Update <%= @ride.title %></h1>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
          <%= simple_form_for @ride do |f| %>
            <%= f.input :title %>
            <%= f.input :city_departure %>
            <%= f.input :city_arrival %>
            <%= f.input :departure_date, as: :string, required: false, input_html: {class: "datepicker"} %>
            <%= f.input :arrival_date, as: :string, required: false, input_html: {class: "datepicker"}   %>
            <%= f.input :ride_description %>
            
          <% end %>
          <div class="show-ride-update">
            <div id= "preview-button" class="btn btn-primary"><%= link_to "See preview", edit_ride_path(@ride) %></div>
            <div id= "update-button" class="btn btn-secondary"><%= link_to "Validate Update", ride_path(@ride) %></div>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="show-ride-details">
          <p>From <%= @ride.city_departure %> To <%=  @ride.city_arrival%></p>
          <p data-startlg="<%= @ride.start_long %>" data-startlt="<%= @ride.start_lat %>" id="start"></p>
          <p data-endlg="<%= @ride.end_long %>" data-endlt="<%= @ride.end_lat %>" id="end"></p>
          <p id="distance" ></p>
        </div>
        <div class="show-ride-image">
          <div data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY']%>" id='map' class="map"></div>
        </div>
      </div>
    </div>
  </div>
</div>
